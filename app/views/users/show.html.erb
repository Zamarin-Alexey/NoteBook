<div class="container">

  <div class="row" style="margin-bottom: 10px">
    <div class="col-2"></div>
    <div class="col-4">
      <h3>Personal account</h3>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <%= button_to('Change', edit_user_path(@user), method: :get, class: "btn btn-outline-primary") %>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
    <ul class="list-group">
      <li class="list-group-item"><label style="margin-right: 5px">Name: </label><span><%= @user.name %></span></li>
      <li class="list-group-item"><label style="margin-right: 5px">Username: </label><span><%= @user.username %></span></li>
      <li class="list-group-item"><label style="margin-right: 5px">Email: </label><span><%= @user.email %></span></li>
    </ul>
    </div>
    <div class="col-2"></div>
  </div>

</div>
