
<div class="container-md">
  <div class="row">
    <div class="col-8">
      <h4 style="margin: 20px"><%= t('page.my_notes') %></h4>
    </div>
    <div class="col-4 d-flex justify-content-center" style="align-self: center">
      <%= button_to(t('page.add_note'), new_note_path, method: :get, class: "btn btn-outline-primary") %>
    </div>
  </div>
  <div class="row">
    <% if @notes.empty? %>
      <div> <%= t('page.my_notes') %></div>
    <% else %>
      <% @notes.each do |note| %>
        <div class="card">
          <div class="card-header"><h5><%= note[:header] %></h5></div>
          <div class="card-body">
            <a href="/notes/<%= note[:id] %>" class="btn btn-outline-primary"> <%= t('page.details') %></a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>